char* hexa(char *c)
{
    char *token=strtok(c,"'");
    char buffer[20]={""};
    char g[200]={""};
    while(token!=NULL)
    {
    //itoa(token,buffer,16);
    printf("%s",token);
    //strcat(g,buffer);
    token=strtok(NULL,"'");
    }
    return g;
}

